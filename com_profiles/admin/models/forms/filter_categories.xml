<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field name="search" type="text" hint="JSEARCH_FILTER"/>
		<field name="published" type="list" onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_PUBLISHED</option>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="parent" type="categories" onchange="this.form.submit();">
			<option value="">COM_PROFILES_CATEGORY_PARENT_SELECT</option>
		</field>
		<field name="access" type="accesslevel" onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_ACCESS</option>
		</field>
	</fields>
	<fields name="list">
		<field name="fullordering" type="list"
			   onchange="this.form.submit();"
			   default="с.lft ASC">
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="с.lft ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="с.lft DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="с.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="с.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="access_level ASC">JGRID_HEADING_ACCESS_ASC</option>
			<option value="access_level DESC">JGRID_HEADING_ACCESS_DESC</option>
			<option value="с.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="с.id DESC">JGRID_HEADING_ID_DESC</option>
			<option value="с.state ASC">JSTATUS_ASC</option>
			<option value="с.state DESC">JSTATUS_DESC</option>
		</field>
		<field name="limit" type="limitbox"
			   class="inputbox input-mini"
			   default="25"
			   onchange="this.form.submit();"/>
	</fields>
</form>