<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="description" type="editor"
			   label="JGLOBAL_DESCRIPTION"
			   filter="JComponentHelper::filterText"
			   buttons="true"/>
		<field name="image" type="image"
			   label="JGLOBAL_FIELD_IMAGE_LABEL"
			   description="JGLOBAL_FIELD_IMAGE_DESC"
			   folder_field="images_folder"
			   filename="image"
			   class="span12"/>
	</fieldset>
	<fieldset name="header">
		<field name="title" type="text"
			   label="JGLOBAL_TITLE"
			   description="JFIELD_TITLE_DESC"
			   class="input-xxlarge input-large-text"
			   size="40"
			   required="true"/>
		<field name="alias" type="text"
			   label="JFIELD_ALIAS_LABEL"
			   description="JFIELD_ALIAS_DESC"
			   hint="JFIELD_ALIAS_PLACEHOLDER"
			   size="40"/>
	</fieldset>
	<fieldset name="global">
		<field name="id" type="text"
			   label="JGLOBAL_FIELD_ID_LABEL"
			   description="JGLOBAL_FIELD_ID_DESC"
			   class="readonly span12"
			   size="10"
			   default="0"
			   readonly="true"/>
		<field name="parent_id" type="districts"
			   label="COM_PROFILES_CATEGORY_PARENT"
			   default="1">
			<option value="1">JGLOBAL_ROOT_PARENT</option>
		</field>
		<field name="images_folder" type="folder"
			   label="JGLOBAL_FIELD_IMAGES_FOLDER_LABEL"
			   description="JGLOBAL_FIELD_IMAGES_FOLDER_DESC"
			   class="span12"/>
		<field name="state" type="list"
			   label="JSTATUS"
			   description="JFIELD_PUBLISHED_DESC"
			   class="chzn-color-state span12"
			   filter="intval"
			   size="1"
			   default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="access" type="accesslevel"
			   label="JFIELD_ACCESS_LABEL"
			   description="JFIELD_ACCESS_DESC"
			   size="1"
			   class="span12"/>
		<fields name="attribs">
			<field name="list_layout" type="componentlayout"
				   label="JFIELD_ALT_LAYOUT_LABEL"
				   description="JFIELD_ALT_COMPONENT_LAYOUT_DESC"
				   useglobal="true"
				   extension="com_centers"
				   view="list"
				   class="span12"/>
		</fields>
		<field name="lft" type="hidden" filter="unset"/>
		<field name="rgt" type="hidden" filter="unset"/>
	</fieldset>
</form>