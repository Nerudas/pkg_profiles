<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="credentials" label="COM_PROFILES_LOGIN">
		<field name="username" type="text"
			   label="COM_PROFILES_LOGIN_USERNAME_LABEL"
			   hint="COM_PROFILES_LOGIN_USERNAME_HINT"
			   class="validate-username"
			   filter="username"
			   size="25"
			   required="true"
			   validate="username"
			   autofocus="true"/>

		<field name="password" type="password"
			   label="JGLOBAL_PASSWORD"
			   class="validate-password"
			   required="true"
			   filter="raw"
			   size="25"/>

		<field name="socials" type="sociallogin" label="COM_PROFILES_SOCIALS"/>
	</fieldset>

	<field name="secretkey" type="text" label="JGLOBAL_SECRETKEY"
		   class=""
		   filter="int"
		   size="25"/>
	<fieldset>
		<field name="return" type="hidden"/>
	</fieldset>
</form>
